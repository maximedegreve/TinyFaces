#extend("base"):

 #export("head"):
    <title>TinyFaces 👦🏼👨🏾👩🏻 - Sign in to get a license</title>
 #endexport

 #export("body"):

    <div class="bg-snow--d padding-l paddingTop-l" style="height:216px">
      <div class="textAlign-center width-100 pageWrap pageWrap--l">
          <div class="display-inlineBlock textAlign-left width-100" style="max-width:700px;">
              <div class="marginBottom-xl"><img width="93" height="auto" src="../images/logo.png" alt="TinyFaces Logo"></div>
              <div class="position-absolute"><img width="119" height="119" src="../images/single.png"></div>
          </div>
      </div>
    </div>

  <div class="textAlign-center padding-m paddingBottom-l">
  <div class="display-inlineBlock textAlign-left pageWrap pageWrap--l paddingTop-m" style="max-width:700px;">
  
  <h1 class="fontSize-xxl lineHeight-xl c-steel marginBottom-xs marginTop-l display-inlineBlock">Sign in to your account</h1>
  <p class="fontSize-m lineHeight-l fontWeight-3 c-steel" style="max-width: 500px;">
Enter your email below to receive a sign-in link to manage your licenses. Without a license our content can't be used for commercial projects.
  </p>
  <form class="marginTop-s" action="/authenticate/magic" method="POST">
    <label for="email" class="display-block">Email</label>
    <input name="email" type="email" class="input input--m input--default marginTop-xs display-block" style="width: 100%; max-width: 400px;" placeholder="name@domain.com" type="text">
    <button type="submit" class="button button--m button--flat bg-marvel marginTop-s">Send magic link</button>
  </form>

 </div>

 </div>
 
 #endexport

#endextend


